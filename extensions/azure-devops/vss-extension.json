{
    "manifestVersion": 1,
    "id": "esquio-extensions",
    "version": "0.0.2",
    "name": "Esquio extensions",
    "description": "Esquio extensions for Azure DevOps",
    "publisher": "luisfraile",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "categories":[
        "Azure Pipelines"
    ],
	"icons": {
		"default": "icons/xabaril.png"
	},
	"branding": {
		"color": "#3B3E43",
		"theme": "dark"
	},
	"screenshots": [{
		"path": "images/XabarilSample.png"
	}],
    "contributions": [
        {
            "id": "service-endpoint",
            "description": "Service endpoint type for Esquio connections",
            "type": "ms.vss-endpoint.service-endpoint-type",
            "targets": [
                "ms.vss-endpoint.endpoint-types"
            ],
            "properties": {
                "name": "esquio",
                "icons": {
                    "default": "icons/xabaril-endpoint-icon.png",
                    "wide": "icons/xabaril.png"
                },
                "displayName": "Esquio API connection",
                "url": {
                    "displayName": "Esquio API Url",
                    "helpText": "Url for the Esquio API to connect to."
                },
                "inputDescriptors":[
                    {
                        "id": "apiKey",
                        "name": "Esquio API Key",
                        "description": "Esquio API key",
                        "inputMode": "textbox",
                        "isConfidential": false,
                        "validation": {
                            "isRequired": true,
                            "dataType": "string",
                            "maxLength": 150
                        }
                    }
                ],
                "dataSources": [
                    {
                        "name": "TestConnection",
                        "endpointUrl": "{{endpoint.url}}/api/v1/products?apikey={{endpoint.apiKey}}",
                        "resultSelector": "jsonpath:$.result[*]"                     
                    },
                    {
                        "name": "Esquio Products",
                        "endpointUrl": "{{endpoint.url}}/api/v1/products?apikey={{endpoint.apiKey}}",
                        "resultSelector": "jsonpath:$.result[*]"
                    },
                    {
                        "name": "Esquio Flags",
                        "endpointUrl": "{{endpoint.url}}/api/v1/products/$(productId)/flags?apikey={{endpoint.apiKey}}",
                        "resultSelector": "jsonpath:$.result[*]"
                    }
                ],
                "authenticationSchemes": [
                    {
                        "type":"ms.vss-endpoint.endpoint-auth-scheme-none"
                    },
                    {
                        "type": "ms.vss-endpoint.endpoint-auth-scheme-token",
                        "headers": [
                            {
                                "name": "Authorization",
                                "value": "{{endpoint.apitoken}}"
                            }
                        ]
                    }
                ],
                "helpMarkDown": "<a href=\"TODO\" target=\"_blank\"><b>Learn More</b></a>"
            }
        },
        {
            "id": "rollout-feature",
            "description": "Esquio rollout feature",
            "type": "ms.vss-distributed-task.task",
            "targets": [ "ms.vss-distributed-task.tasks" ],
            "properties": {
              "name": "rollout-feature"
            }
          }
    ],
    "files": [
        {
            "path": "rollout-feature"
        }
    ]
}
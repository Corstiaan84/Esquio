FROM mcr.microsoft.com/dotnet/aspnet:5.0.0-rc.2-buster-slim AS base
WORKDIR /app
EXPOSE 80
FROM  mcr.microsoft.com/dotnet/sdk:5.0.100-rc.2-buster-slim AS build
WORKDIR /src
COPY ./Directory.Build.props ./Directory.Build.props
COPY ./Directory.Build.targets ./Directory.Build.targets
COPY ./build ./build
COPY ./src ./src
WORKDIR /src/src/Esquio.UI.Host
RUN dotnet build -c Release -o /app
FROM build AS publish
RUN dotnet publish -c Release -o /app
FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet","Esquio.UI.Host.dll"]
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model WebApp.Models.Match

<div class="container match">
    <div class="jumbotron p-sm-3">
        <h3 class="d-flex justify-content-between">
            Live Score @Model.Local - @Model.Visitor
            <span class="badge badge-pill">@Model.Time</span>
        </h3>

        <p class="lead">Follow the match minute by minute (10 seconds on this demo are like 1 minute in the real match). The page will be refreshed automatically.</p>
        <p>@Model.Description</p>

        <div class="progress match-progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated bg-info" role="progressbar" style="width: 20%" aria-valuemin="0"></div>
        </div>
    </div>

    <h4>Current match status:</h4>
    @if (Model.Minutes != null)
    {
        <div class="container pb-4">
            @foreach (var minute in Model.Minutes)
            {
                <div class="row minute pb-1 pt-1">
                    <div class="col-1 text-center">@minute.Minute'</div>
                    <div class="col-1 text-center">@minute.Event</div>
                    <div class="col-10">@minute.Text</div>
                </div>
            }
        </div>
    }
</div>

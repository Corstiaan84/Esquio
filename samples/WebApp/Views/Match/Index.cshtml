@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<WebApp.Models.Match>

<div class="container">
    <div class="row justify-content-start">
        @foreach (var match in Model)
        {
            <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                @* // TODO: show classes with better logic, not this if *@
                <div class="@("card mb-3 " + (match.State == MatchState.Pending ? "border-light" : match.State == MatchState.Started ? "border-success" : "bg-light" ))">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>@match.State</span>

                        @if (match.State == MatchState.Finished)
                        {
                            <flag featureName="@Flags.MatchScore">
                                <span class="badge badge-secondary badge-pill">@match.ScoreLocal - @match.ScoreVisitor</span>
                            </flag>
                        }
                        else
                        {
                            <span class="badge badge-primary badge-pill">@match.Time</span>

                        }
                    </div>
                    <div class="card-body">
                        <h4 class="card-title text-truncate" title="@match.Local - @match.Visitor"> @match.Local - @match.Visitor </h4>

                        <p class="card-text">@match.Description</p>

                        @if (User.Identity.IsAuthenticated && match.State == MatchState.Started)
                        {
                            <a asp-controller="Match" asp-action="Detail" asp-route-id="@match.Id">
                                <button type="button" class="btn btn-primary btn-sm">@Localizer["Open"]</button>
                            </a>
                        }
                        else if (User.Identity.IsAuthenticated)
                        {
                            <button type="button" class="btn btn-primary btn-sm disabled">@Localizer["Open"]</button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

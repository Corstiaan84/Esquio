@model WebApp.Models.Match

<div class="progress mb-4">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-info" role="progressbar" style="width: 20%" aria-valuemin="0"></div>
</div>

<div class="container pb-4">
    @foreach (var minute in Model.Minutes)
    {
        <div class="row minute pb-1 pt-1">
            <div class="col-1 text-center">@minute.Minute'</div>
            <div class="col-1 text-center">@minute.Event</div>
            <div class="col-10">@minute.Text</div>
        </div>
    }
</div>